<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.novoda.tpbot">

  <uses-permission android:name="android.permission.INTERNET" />

  <uses-feature android:name="android.hardware.usb.host" />

  <application
    android:name="com.novoda.tpbot.TelepresenceBotApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="AllowBackup,GoogleAppIndexingWarning">

    <service
      android:name=".bot.video.calling.HangoutJoinerAutomationService"
      android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
      </intent-filter>
      <meta-data
        android:name="android.accessibilityservice"
        android:resource="@xml/accessibility_service_config" />
    </service>

    <activity
      android:name="com.novoda.tpbot.landing.LandingActivity"
      android:icon="@mipmap/ic_launcher">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name="com.novoda.tpbot.human.HumanActivity"
      android:icon="@mipmap/ic_bot_controller_launcher"
      android:label="@string/human" />

    <activity
      android:name="com.novoda.tpbot.bot.BotActivity"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/bot" />

    <service
      android:name="com.novoda.tpbot.bot.BoundAndroidBotService"
      android:exported="false" />

    <service
      android:name="com.novoda.tpbot.bot.movement.BoundAndroidMovementService"
      android:exported="false" />

  </application>

</manifest>
